# Validation Agent Dockerfile
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-validation.txt .
RUN pip install --no-cache-dir -r requirements-validation.txt

# Copy agent code
COPY validation_agent.py .
COPY shared_queue.py .
# Create non-root user
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app
USER app

# Run the validation agent
CMD ["python", "validation_agent.py"]
